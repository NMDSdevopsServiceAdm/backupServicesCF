{
  "name": "backupServicesCF",
  "version": "1.0.0",
  "description": "Backup services on Cloud Foundry",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "test": "mocha --exit 'test/**/*.spec.js'",
    "cover": "nyc --reporter=html mocha --exit 'test/**/*.spec.js'"
  },
  "author": "Skills for Care",
  "license": "MIT",
  "dependencies": {
    "await-exec": "^0.1.2",
    "aws-sdk": "^2.771.0",
    "bree": "^3.3.0",
    "cfenv": "^1.2.4",
    "convict": "^6.0.0",
    "dotenv": "^10.0.0",
    "node-gzip": "^1.1.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "chai": "^4.3.4",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "mocha": "^9.0.3",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "proxyquire": "^2.1.3",
    "sinon": "^11.1.2"
  },
  "engines": {
    "node": "12.19.0",
    "npm": "6.14.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,yml,md}": "prettier --write"
  },
  "nyc": {
    "branches": 10,
    "lines": 15,
    "functions": 15,
    "statements": 15,
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "check-coverage": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "server/test/**/*"
    ]
  }
}
